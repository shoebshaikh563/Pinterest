<%include ./partials/header.ejs%>
<form
  hidden
  action="/fileupload"
  id="uploadform"
  method="post"
  enctype="multipart/form-data"
>
  <input type="file" name="image" />
</form>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
  <div class="profdets flex flex-col items-center mt-10 relative">
    <div class="relative">
      <span
        id="uploadicon"
        class="cursor-pointer w-8 h-8 bg-zinc-200 rounded-full text-black flex justify-center items-center absolute right-0 bottom-0"
      >
        <i class="ri-pencil-fill"></i>
      </span>
      <div class="w-32 h-32 bg-zinc-200 rounded-full my-1 overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%=user.profileImage%>"
          alt=""
        />
      </div>
    </div>
    <h1 class="text-3xl font-semibold">@<%=user.username%></h1>

    <a
      href="/add"
      class="mt-5 font-semibold py-2 px-5 bg-red-600 rounded-lg text-xs"
      >Add New Post</a
    >
  </div>

  <div class="cards flex flex- wrap gap-10 px-10 mt-4">
    <div class="card">
      <div class="rounded-lg w-48 h-40 bg-zinc-200 overflow-hidden relative">
        <%if(user.posts && user.posts.length > 0 && user.posts[0].image){%>
        <img
          src="/images/uploads/<%=user.posts[0].image%>"
          alt=""
          class="h-full w-full object-cover"
        />
        <%}else{%>
        <h1
          class="text-black absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 font-semibold text-xl"
        >
          No Posts
        </h1>
        <%}%>
      </div>
      <a href="/show/posts" class="inline-block text-xl font-semibold mt-2"
        >All pins</a
      >
      <h5 class="text-sm font-medium opacity-60">
        <%=user.posts.length%> pins
      </h5>
    </div>
  </div>
</div>

<script>
  document.querySelector("#uploadicon").addEventListener("click", () => {
    document.querySelector("#uploadform input").click();
  });
  document.querySelector("#uploadform input").addEventListener("change", () => {
    document.querySelector("#uploadform").submit();
  });
</script>
<%include ./partials/footer.ejs%>
